doctype html
html(lang='en')
  include ../common/header.jade
  +head("Login to Starter MVP")
  body
    .container.mt-5
      .row
        .col-sm-12.offset-md-2.col-md-8
          .jumbotron
            h2.text-center Login
            .row
              .col-sm-12.col-md-12.col-xs-12
                form(action='/plan/login', method='POST')
                  div.formgroup
                    label.small.mb-1.mt-3 Email:
                    input(placeholder='Enter your email', required=true, name='login', value='').form-control
                    label.small.mb-1.mt-3 Password:
                    input(placeholder='Enter your current password',required=true, name='password', type='password', value='').form-control
                    if errors 
                      div(class="alert alert-danger", role="alert")
                        | #{errors}
                    button.mt-3.btn.btn-submit(type='submit') Log in
                    p.m-0
                      | Don't have an account? #[a(href="/signup") Sign up here].

    include ../common/footer.jade
    +footer()
